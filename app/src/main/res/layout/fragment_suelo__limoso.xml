<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suelo_Limoso">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="@string/suelo_limoso" />

            <TextView
                android:id="@+id/textView3"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/suelo_limoso1" />

            <ImageView
                android:id="@+id/gifarenoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/limoso1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="@string/suelo_limoso2"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/suelo_limoso3" />

            <Button
                android:id="@+id/buttonlimoso"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="EJEMPLO" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>